# Configurações de Segurança
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=False

# Configurações de Domínio
ALLOWED_HOSTS=rmsys.com.br,www.rmsys.com.br,127.0.0.1,localhost
CSRF_TRUSTED_ORIGINS=https://rmsys.com.br,https://www.rmsys.com.br

# Configurações de Banco de Dados
DB_NAME=saas_viabilidade
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Configurações de Redis (Cache)
REDIS_URL=redis://localhost:6379/1

# Configurações de Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@rmsys.com.br

# Configurações de Monitoramento
SENTRY_DSN=your-sentry-dsn-here

# Configurações de Backup
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30

# Configurações de Rate Limiting
RATE_LIMIT_ENABLED=True

# Configurações de Upload
MAX_FILE_SIZE=10485760  # 10MB em bytes
ALLOWED_FILE_TYPES=xlsx,xls,csv,kml,kmz

# Configurações de Logging
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=WARNING

